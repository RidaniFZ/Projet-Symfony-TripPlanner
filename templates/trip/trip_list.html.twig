            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
        
        </div>
        <div class="modal-footer">
          {# <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="/edit/trip/{{ listTrips.id }}">OK</a> #}
        </div>
      </div>
    </div>
  </div>


